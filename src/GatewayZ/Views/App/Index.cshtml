@{
    ViewBag.Title = "Home Page";
}

@model GatewayZ.Models.User

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>GatewayZ - @ViewBag.Title</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.js"></script>
</head>

<body style="overflow-y: hidden">
    <div class="container-fluid" id="Hero">
        <div class="row">
            <div class="col-xs-12" id="Heroinner">
                <header id="myCarousel" class="carousel slide">
                    <div class="carousel-inner  hidden-xs">
                        <div class="item active">
                            <!-- Set the first background image using inline CSS below. -->
                            <div class="fill"><img src="~/Images/Zcar1.jpg.jpg"  class="img-responsive" /></div>
                        </div>
                        <div class="item">
                            <!-- Set the second background image using inline CSS below. -->
                            <div class="fill"><img src="~/Images/Zcar2.jpg.jpg"  class="img-responsive" /></div>
                        </div>
                        <div class="item">
                            <!-- Set the third background image using inline CSS below. -->
                            <div class="fill"><img src="~/Images/Zcar3.jpg.jpg"  class="img-responsive" /></div>
                        </div>
                        <div class="item">
                            <!-- Set the forth background image using inline CSS below. -->
                            <div class="fill"> <img src="~/Images/Zcar4.jpg.jpg" class="img-responsive" /></div>
                        </div>
                        <div class="item">
                            <!-- Set the fifth background image using inline CSS below. -->
                            <div class="fill"><img src="~/Images/Zcar5.jpg.jpg"  class="img-responsive" /></div>
                        </div>
                        <div class="item">
                            <!-- Set the sixth background image using inline CSS below. -->
                            <div class="fill"> <img src="~/Images/Zcar6.jpg.jpg" class="img-responsive" /></div>
                        </div>
                    </div>
                </header>
            </div>
        </div>
    </div>

    <div>
        <a href="~/App/Index"><img src="~/Images/logoPS.png" class="Logo"></a>
    </div>
    <div class="Navbox">
        <ul>
            <li><a href="~/App/Index">Home</a></li>
            <li><a href="~/About">About</a></li>
            <li><a href="~/History">History</a></li>
            @{
                if (ViewBag.AuthUser == "RegisteredUser" || ViewBag.AuthUser == "Admin")
                {
                    <li><a href="~/Events">Events</a></li>
                }
                if (ViewBag.AuthUser == "Admin")
                {
                    <li><a href="~/Admin">Admin</a></li>
                }
            }
        </ul>
    </div>

    @if (@ViewBag.Email != null && @ViewBag.Password != null)
    {
        <div class="UpcommingEvents">
            <div class="UpcommingEventsHeader">
                <p>UPCOMING EVENTS</p>
            </div>
            <div>
                <ul class="UpcomingEventsListItemsUL" style="list-style:none">
                    @{
                        foreach (var text in @ViewBag.Events)
                        {
                            <li class="UpcomingEventsListItemsLI">@text</li>
                        }
                    }
                </ul>
            </div>
        </div>
      }
    <div class="loginBackGround">
        @if (@ViewBag.Email != null && @ViewBag.Password != null)
            {
            <p><strong>Welcome @ViewBag.DisplayName</strong> | @Html.ActionLink("Logout", "Logout")</p>
        }
        else
        {
            <div class="login">
                <form class="form-inline" role="form" method="post">
                    <div class="form-group">
                        @Html.LabelFor(model => model.email)
                        @Html.TextBoxFor(model => model.email, new { @class = "form-control", @id = "inputEmail", placeholder = "Email" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.password)
                        @Html.PasswordFor(model => model.password, new { @class = "form-control", @id = "inputPassword", placeholder = "Password" })
                    </div>

                    <button type="submit" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-log-in"></span> Log in
                    </button>
                    <div>
                        <div class="RecoverPasswordLink">
                            <a href="~/RecoverPassword"><strong>|Recover Password</strong></a>
                        </div>
                        <div class="RegisterLink">
                            <a href="~/Register"><strong>Register</strong></a>
                        </div>
                    </div>
                </form>
            </div>
        }
    </div>

    @if (@ViewBag.Email != null && @ViewBag.Password != null)
    {
        <div class="Joinclubbox">
            <a href="~/pdf/gatewayzSignupform.pdf" download><img src="~/Images/JoinClubDownload.jpg" class="img-rounded JoinclubPic"></a>
        </div>
    }

    <div id="footer">
        &copy; @DateTime.Now.Year Gateway Z Club
        <p style="float:right">Like us on Facebook! <a href="https://www.facebook.com/gatewayzclub/"><img src="~/Images/facebooklogo.jpg" alt="facebook logo" class="img-rounded" width="25" height="25" /></a></p>
    </div>

    <script>
        $('.carousel').carousel({
            interval: 3000 //changes the speed
        })
    </script>
</body>
</html>