@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {
        $('.Contactprofile').hide();
    });

        $("#toggleAboutClubInfo").click(function () {         
            $(".Contactprofile").hide();
            $(".Aboutclub").fadeIn(2000);
        });
            

    $("#togglePresidentInfo").click(function () {
        $(".Aboutclub").hide();
        $(".Contactprofile").hide();
        $("#Presprofile").fadeIn(2000);
    });
    

    $("#toggleVicePresidentInfo").click(function () {
        $(".Aboutclub").hide();
        $(".Contactprofile").hide();
        $("#Vicepresprofile").fadeIn(2000);
    });

    $("#toggleSecretaryInfo").click(function () {
        $(".Aboutclub").hide();
        $(".Contactprofile").hide();
        $("#Secprofile").fadeIn(2000);
    });

    $("#toggleTreasurerInfo").click(function () {
        $(".Aboutclub").hide();
        $(".Contactprofile").hide();
        $("#Treasurerprofile").fadeIn(2000);
    });

    $("#toggleMembershipDirectorInfo").click(function () {
        $(".Aboutclub").hide();
        $(".Contactprofile").hide();
