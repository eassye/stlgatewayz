@{
    ViewBag.Title = "About Page";
}

    <div id="background">
        <img src="~/Images/aboutpagebg.jpg" alt="bgimage" />
        <div class="contacts">
            <ul>
                <li id="toggleAboutClubInfo"><a>About Club</a></li>
                <li id="togglePresidentInfo"><a>President</a></li>
                <li id="toggleVicePresidentInfo"><a>Vice President</a></li>
                <li id="toggleSecretaryInfo"><a>Secretary</a></li>
                <li id="toggleTreasurerInfo"><a>Treasurer</a></li>
                <li id="toggleMembershipDirectorInfo" ><a>Membership Director</a></li>
                <li id="toggleWebmasterInfo"><a>Webmaster</a></li>
                <li id="toggleSocialMediaCoordinatorInfo" ><a>Social Media Coordinator</a></li>
            </ul>
        </div>

        <div class="clubinfo">
            <div class="popboarder">
                <div  class="infopic">
                    <img src="~/Images/z-arch.jpg" class="infopics"/>
                </div>
                <div class="infopic2">
                    <img src="~/Images/z-arch.jpg" class="infopics" />
                </div>
                    <p>CLUB INFO</p>
                </div>
            
            <div class="Aboutclub">
                <p><strong>
    Meetings are held on the third Wednesday of each month at 7:30 PM at a location determined by the club. Annual dues are $35.
    In addition to club activities, members enjoy a monthly newsletter and discounts from club sponsors. You can download the membership form
    here if you would like to print it and fill out in advance of a meeting or event. If you can’t see/print the form you may need to get Adobe
    Acrobat for your system. You can also mail the completed form along with the $35 membership fees to the address on the form
</strong></p>
             </div>


